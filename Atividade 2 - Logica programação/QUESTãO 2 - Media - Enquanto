Algoritmo "semnome"
// Media

Var
   Resposta : Caractere
   Numero, Soma, Media : Real
   Contador : Inteiro



Inicio
   Resposta <- "S"
   Enquanto Resposta = "S" faca

      Escreva ("Digite um nÃºmero: ")
      leia (Numero)
      
      Limpatela

      Escreva ("Deseja continua? [S/N]")
      Leia (Resposta)

      Limpatela

      Contador <- Contador + 1
      Soma <- Soma + Numero

   FimEnquanto

   Media <- Soma/Contador

   Escreval ("Media :", Media)
   Escreval ("Numeros digitados:", Contador)




Fimalgoritmo
